@model IEnumerable<course_melshavs.Models.Product>

@* <link rel="stylesheet" href="/css/menu.css" /> *@

<h1 class="text-center mb-4">Асортимент шаурми</h1>
<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="flip-card">
                    <div class="flip-card-inner">
                        <!-- Лицьовий бік картки -->
                        <div class="flip-card-front text-center">
                            <h5 class="card-title">@product.Name</h5>
                            <img src="@Url.Content("~/Product/" + product.ImagePath)" class="card-img-top" alt="@product.Name" />
                        </div>
                        <!-- Зворотний бік картки -->
                        <div class="flip-card-back text-center">
                            <h5><b>@product.Name</b></h5>
                            <p>@product.Description</p>
                            <p><strong>Вага:</strong> @product.Weight г</p>
                            <p><strong>Ціна:</strong> @product.Price.ToString("C", new System.Globalization.CultureInfo("uk-UA"))</p>
                            <form asp-action="AddToCart" asp-controller="Cart" method="post">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <input type="hidden" name="quantity" value="1" min="1" />
                                <button type="submit" class="btn btn-primary w-100 mt-2">Додати до кошику</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        color: black;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background-color: #ffffff; /* Фон ассортимента шаурмы */
    }

    .tiles {
        width: 100%;
        margin: 0 auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .flip-card {
        width: 100%;
        max-width: 350px; /* Ограничим максимальную ширину */
        height: 450px; /* Примерная высота карточки */
        margin: 20px;
        perspective: 1000px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: 2px solid #a1d6ff; /* Голубая рамка */
        border-radius: 15px;
        background-color: #ffffff; /* Белый фон карточки */
    }

    .flip-card-inner {
        width: 100%;
        height: 100%;
        transition: transform 0.6s;
        transform-style: preserve-3d;
        border-radius: 15px;
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front,
    .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 15px;
    }

    .flip-card-front {
        padding: 15px;
        display: flex;
        flex-direction: column;
    }

        .flip-card-front h5 {
            color: #000;
            font-size: 25px;
            margin-top: 30px;
            margin-bottom: 25px;
            font-weight: bold;
        }

        .flip-card-front img {
            width: 100%;
            height: 200px; /* Для фото */
            object-fit: cover;
            border-radius: 10px;
            border: 2px solid #a1d6ff; /* Голубая рамка для фото */
            margin-top: 50px;
        }

    .flip-card-back {
        background-color: #ffffff;
        color: black;
        text-align: center;
        padding: 15px;
        transform: rotateY(180deg);
        border: 2px solid #a1d6ff; /* Голубая рамка, меньше */
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .flip-card-back h5 {
            font-size: 20px;
            color: #000;
        }

        .flip-card-back p {
            font-size: 16px;
            color: #333;
            margin: 5px 0;
            max-height: 50%;
            overflow-y: auto;
            line-height: 1.5;
            padding: 10px;
            border: 1px solid #a1d6ff;
            border-radius: 10px;
            background-color: #ffffff;
        }

        .flip-card-back .weight,
        .flip-card-back .price {
            font-size: 18px;
            margin-top: 10px;
        }

        .flip-card-back .add-to-cart {
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            margin-top: 15px;
            padding: 10px;
        }

            .flip-card-back .add-to-cart:hover {
                background-color: #45a049;
            }

    footer {
        background-color: #FF8000; /* Оранжевый */
        color: black;
        text-align: center;
        padding: 15px;
        border-top: 2px solid #ffffff;
        font-size: 18px;
        margin-top: auto;
    }

</style>