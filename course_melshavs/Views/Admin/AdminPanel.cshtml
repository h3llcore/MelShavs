@model IEnumerable<course_melshavs.Models.Product>
@{
    ViewData["Title"] = "Адмін-панель";
    <link rel="stylesheet" href="/css/admin.css">
}

<h2 class="text-center my-5">Адмін-панель</h2>
<a class="btn btn-success mb-3" href="Create">Додати нову cтраву</a>

<table class="table table-striped table-bordered shadow-sm rounded">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Опис (склад)</th>
            <th>Вага (г)</th>
            <th>Ціна</th>
            <th>Дія</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Weight</td>
                <td>@product.Price</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="Edit/@product.Id">Редагувати</a>
                    <form asp-action="Delete" asp-controller="Admin" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button class="btn btn-danger btn-sm" type="submit">Видалити</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
